{% extends 'front.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block _main %}
    <div class="ps-layout--shop">
        <div class="ps-layout__left">
            <aside class="widget widget_shop">
                <h4 class="widget-title">Categorias</h4>
                <ul class="ps-list--categories">
                    <!--Categoria item-->
                    {% for categoria in dataCategorias() %}
                        <li>
                            {#                            <a href="{{ path('app_front_category', {'id': categoria.id}) }}">#}
                            <a href="#" class="categoria-info" data-id="{{ categoria.id }}">
                                {{ categoria.nombre }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </aside>
            <aside class="widget widget_shop">
                <h4 class="widget-title"> MARCAS </h4>

                <ul class="ps-list--categories">

                    {% for marca in dataMarcas() %}
                        <li>
                            <a href="{{ path('app_front_marca', {'id': marca.id}) }}">{{ marca.nombre }} </a>

                        </li>
                    {% endfor %}


                </ul>
                </figure>
                <figure>
                    <h4 class="widget-title">By Price</h4>
                    <div id="nonlinear"></div>
                    <p class="ps-slider__meta">Price:<span class="ps-slider__value">$<span class="ps-slider__min"></span></span>-<span class="ps-slider__value">$<span class="ps-slider__max"></span></span></p>
                </figure>
            </aside>
        </div>
        <div class="ps-layout__right">
            <div class="ps-shopping ps-tab-root">
                <div class="ps-shopping__header">
                    <p> Productos de la Categoría:  <strong> {{ categoria.nombre }} </strong> </p>
                    <div class="ps-shopping__actions">
                        <select class="ps-select" data-placeholder="Sort Items">
                            <option>Sort by latest</option>
                            <option>Sort by popularity</option>
                        </select>
                        <div class="ps-shopping__view">
                            <p>Vista</p>
                            <ul class="ps-tab-list">
                                <li class="active"><a href="#tab-1"><i class="icon-grid"></i></a></li>
                                <li><a href="#tab-2"><i class="icon-list4"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="ps-tabs">
                    <div class="ps-tab active" id="tab-1">
                        <div class="ps-shopping-product">
                            <div id="productsView" class="row">
                                {% for producto in productos %}
                                    <div class="col-xl-2 col-lg-4 col-md-4 col-sm-6 col-6 ">
                                        <div class="ps-product">
                                            <div class="ps-product__thumbnail">
                                                <a href="{{ path('app_front_product', {'id': producto.productoId}) }}">
                                                    <img src="{{ asset('upload/'~producto.fotoNombre) }}" alt=""/>
                                                </a>
                                                <ul class="ps-product__actions">
                                                    <li><a href="#" data-toggle="tooltip" data-placement="top" title="Add To Cart"><i class="icon-bag2"></i></a></li>
                                                    <li><a href="#" data-placement="top" title="Quick View" data-toggle="modal" data-target="#product-quickview"><i class="icon-eye"></i></a></li>
                                                    <li><a href="#" data-toggle="tooltip" data-placement="top" title="Add to Whishlist"><i class="icon-heart"></i></a></li>
                                                    <li><a href="#" data-toggle="tooltip" data-placement="top" title="Compare"><i class="icon-chart-bars"></i></a></li>
                                                </ul>
                                            </div>
                                            <div class="ps-product__container">
                                                <a class="ps-product__vendor" href="#">{{ producto.marcaNombre }}</a>
                                                <div class="ps-product__content">
                                                    <a class="ps-product__title" href="#">
                                                        {{ producto.productoNombre }}
                                                    </a>
                                                    <p class="ps-product__price">{{ producto.productoPrecio }}</p>
                                                </div>
                                                <div class="ps-product__content hover">
                                                    <a class="ps-product__title" href="#">
                                                        {{ producto.productoNombre }}
                                                    </a>
                                                    <p class="ps-product__price">{{ producto.productoPrecio }}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="ps-pagination">
                            <ul class="pagination">
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">Next Page<i class="icon-chevron-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="ps-tab" id="tab-2">
                        <div class="ps-shopping-product">
                            {% for producto in productos %}
                                <div class="ps-product ps-product--wide">
                                    <div class="ps-product__thumbnail">
                                        <a href="{{ path('app_front_product', {'id': producto.productoId}) }}">
                                            <img src="{{ asset('upload/'~producto.fotoNombre) }}" alt=""/>
                                        </a>
                                    </div>
                                    <div class="ps-product__container">
                                        <div class="ps-product__content"><a class="ps-product__title" href="#">{{ producto.productoNombre }}</a>
                                            <p class="ps-product__vendor">Marca: <a href="#">{{ producto.marcaNombre }}</a></p>
                                            <ul class="ps-product__desc">
                                                <!-- Aquí debería ir descripcion del producto -->
                                            </ul>
                                        </div>
                                        <div class="ps-product__shopping">
                                            <p class="ps-product__price">{{ producto.productoPrecio }}</p><a class="ps-btn" href="#">Agregar al Carrito</a>
                                            <ul class="ps-product__actions">
                                                {#                                            <li><a href="#"><i class="icon-heart"></i> Wishlist</a></li>#}
                                                {#                                            <li><a href="#"><i class="icon-chart-bars"></i> Compare</a></li>#}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="ps-pagination">
                            <ul class="pagination">
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">Next Page<i class="icon-chevron-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script src="{{ asset('js/notify.js') }}" type="text/javascript"></script>
<script>
    jQuery(document).ready(function() {
        $(document).on('click', '.categoria-info', function (event) {
                event.preventDefault();
            $.ajax({
                type: 'post',
                url: '{{ path("app_categoria_obtener_productos") }}',
                data: {
                    'categoria-id': $(this).data('id')
                },
                success: function (result) {
                    console.log(result)
                $('#productsView').html('');
                        let productos = result.data
                        let totalProductos = productos.length;
                        for(let $i = 0; $i < totalProductos; $i++) {
                            let producto = productos[$i];
                            let productoHtml = `
                            <div class="col-xl-2 col-lg-4 col-md-4 col-sm-6 col-6 ">
                                        <div class="ps-product">
                                            <div class="ps-product__thumbnail">
                                                <a href="/${producto.productoId}/product">
                                                    <img src="/upload/${producto.fotoNombre}" alt=""/>
                                                </a>
                                                <ul class="ps-product__actions">
                                                    <li><a href="#" data-toggle="tooltip" data-placement="top" title="Add To Cart"><i class="icon-bag2"></i></a></li>
                                                    <li><a href="#" data-placement="top" title="Quick View" data-toggle="modal" data-target="#product-quickview"><i class="icon-eye"></i></a></li>
                                                    <li><a href="#" data-toggle="tooltip" data-placement="top" title="Add to Whishlist"><i class="icon-heart"></i></a></li>
                                                    <li><a href="#" data-toggle="tooltip" data-placement="top" title="Compare"><i class="icon-chart-bars"></i></a></li>
                                                </ul>
                                            </div>
                                            <div class="ps-product__container">
                                                <a class="ps-product__vendor" href="#">${producto.marcaNombre}</a>
                                                <div class="ps-product__content">
                                                    <a class="ps-product__title" href="#">
                                                        ${producto.productoNombre}
                                                    </a>
                                                    <p class="ps-product__price">${producto.productoPrecio}</p>
                                                </div>
                                                <div class="ps-product__content hover">
                                                    <a class="ps-product__title" href="#">
                                                        ${producto.productoNombre}
                                                    </a>
                                                    <p class="ps-product__price">${producto.productoPrecio}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            `;
                            $('#productsView').append(productoHtml);
                        }
                        // modificar html de vista de productos
                    }
                });
            });
        });

</script>
{% endblock %}


